<h1>All Comedians</h1>

<% @comedians.each do |comedian| %>
  <div id="comedian-<%= comedian.id %>">
    <h2><%= comedian.name %></h2>
    <ul>
      <li><%= comedian.age %></li>
      <li><%= comedian.city %></li>
    </ul>
    <h3>Specials</h3>
    <% @specials.each do |special| %>
      <% if special.comedian_id == comedian.id %>
        <ul>
          <li><%= special.name %></li>
        </ul>
      <% end %>
    <% end %>
  </div>
<% end %>
