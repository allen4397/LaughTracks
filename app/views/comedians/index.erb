<h1>All Comedians</h1>

<% @comedians.each do |comedian| %>
  <div id="comedian-<%= comedian.id %>">
    <h2><%= comedian.name %></h2>
    <ul>
      <li>Age: <%= comedian.age %></li>
      <li>Hometown: <%= comedian.city %></li>
    </ul>
    <h3>Specials</h3>
    <% comedian.specials.each do |special| %>
      <ul>
        <li><%= special.name %></li>
      </ul>
    <% end %>
  </div>
<% end %>
